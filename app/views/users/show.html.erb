<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<% if logged_in_user? && @user.id == current_user.id %>

	<p>
	  <strong>Email:</strong>
	  <%= @user.email %>
	</p>

	<%= link_to '登録情報の修正', edit_user_path(@user) %>

	<h3>参加予定のイベント一覧</h3>
	<% @user.events.each do |event|%>
		<p><%= link_to event.group.name,group_path(event.group) %> | <%= link_to event.name,event_path(event) %></p>
	<% end %>

<% end %>

<h3>気になるサークル</h3>
<% @user.groups.each do |group|%>
	<p><%= link_to group.name,group_path(group) %></p>
<% end %>
